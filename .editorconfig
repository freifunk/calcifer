# EditorConfig helps maintain consistent coding styles
# for multiple developers working on the same project.
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# PHP-Dateien sollten PSR-12 folgen
[*.php]
indent_size = 4

# Twig-Templates
[*.twig]
indent_size = 2

# YAML-Dateien (f√ºr Symfony-Konfiguration)
[*.{yaml,yml}]
indent_size = 2

# Frontend-Dateien
[*.{js,css,scss,html,vue}]
indent_size = 2

# JSON und Composer-Dateien
[{*.json,composer.json,composer.lock}]
indent_size = 4

# Markdown-Dateien
[*.md]
trim_trailing_whitespace = false

# Bash-Skripte
[*.sh]
indent_size = 2
end_of_line = lf

# Vermeide Konflikte bei Patch-Dateien
[*.{diff,patch}]
trim_trailing_whitespace = false 