{% extends 'layout.html.twig' %}

{% block body -%}
    <div class="container my-4">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <p>Möchtest du den wiederholenden Termin <strong>„{{ entity.summary }}"</strong> wirklich löschen?</p>
                    <div class="mt-3">
                        <button name="confirmation" value="true" class="btn btn-danger">Ja</button>
                        <a href="{{ path('_show', {'slug' : entity.slug }) }}" class="btn btn-primary">Nein</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}